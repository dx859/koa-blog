extends layout

block css
    link(rel='stylesheet', href=assertsUrl('/css/login.css'))

block title
    title 修改密码

block content
    form(method='post', action='/auth/password')
        div
            span.left-explain 密码：
            input(name='password' type='password')
        div
            span.left-explain 新密码：
            input(name='new_password' type='password')
        div
            span.left-explain 确认新密码：
            input(name='new_password_confirmation' type='password')

        div
            span.left-explain
            input(type='submit', value='修改')