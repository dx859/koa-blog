extends layout

block css
    link(rel='stylesheet', href=assertsUrl('/css/login.css'))

block title
    title 登陆

block content
    form(method='post', action=`/auth/session?url=${redirectUrl}`)
        div
            span.left-explain 用户名：
            input(name='username', type='text')
        div
            span.left-explain 密码：
            input(name='password', type='password')

        div
            span.left-explain
            input(type='submit', value='登陆')